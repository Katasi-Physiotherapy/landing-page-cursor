---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout
  title={post.data.title}
  description={post.data.description || post.data.title}
  image={post.data.coverImage}
>
  <article class="blog-post">
    <div class="container">
      <header class="blog-post__header">
        {post.data.category && (
          <span class="blog-post__category">{post.data.category}</span>
        )}
        <h1 class="blog-post__title">{post.data.title}</h1>
        <time class="blog-post__date" datetime={post.data.date.toISOString()}>
          {post.data.date.toLocaleDateString('en-KE', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
      </header>
      <div class="blog-post__body">
        <Content />
      </div>
    </div>
  </article>
</Layout>

<style>
  .blog-post {
    padding: var(--space-3xl) 0;
  }
  
  .blog-post__header {
    margin-bottom: var(--space-2xl);
    max-width: 720px;
  }
  
  .blog-post__category {
    font-size: 0.875rem;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    display: block;
    margin-bottom: var(--space-sm);
  }
  
  .blog-post__title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    margin: 0 0 var(--space-md);
    color: var(--color-text);
  }
  
  .blog-post__date {
    font-size: 1rem;
    color: var(--color-text-muted);
  }
  
  .blog-post__body {
    max-width: 720px;
    line-height: 1.8;
  }
  
  .blog-post__body :global(h2) {
    font-size: 1.5rem;
    margin: var(--space-2xl) 0 var(--space-md);
    color: var(--color-primary);
  }
  
  .blog-post__body :global(h3) {
    font-size: 1.25rem;
    margin: var(--space-xl) 0 var(--space-md);
  }
  
  .blog-post__body :global(p) {
    margin-bottom: var(--space-lg);
  }
  
  .blog-post__body :global(ul),
  .blog-post__body :global(ol) {
    margin-bottom: var(--space-lg);
    padding-left: var(--space-xl);
  }
  
  .blog-post__body :global(img) {
    border-radius: var(--radius-lg);
    margin: var(--space-xl) 0;
  }
  
  .blog-post__body :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
  }
</style>
